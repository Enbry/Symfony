{% extends "BlogBundle::layout.html.twig" %}

{% block title %}
  Supprimer une catégorie - {{ parent() }}
{% endblock %}

{% block blog_body %}

  <h2>Supprimer une catégorie</h2>

  <p>
    Etes-vous certain de vouloir supprimer la catégorie "{{ tag.name }}" ?
  </p>

  <form action="{{ path('category_delete', {'id': category.id}) }}" method="post">
    <a href="{{ path('blog_categories') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>

    <input type="submit" value="Supprimer" class="btn btn-danger" />

    {{ form_rest(form) }}
  </form>

{% endblock %}
