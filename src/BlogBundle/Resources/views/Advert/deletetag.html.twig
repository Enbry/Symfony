{% endblock %}

{% block blog_body %}

  <h2>Supprimer un tag</h2>

  <p>
    Etes-vous certain de vouloir supprimer le tag "{{ tag.name }}" ?
  </p>

  <form action="{{ path('tag_delete', {'id': tag.id}) }}" method="post">
    <a href="{{ path('blog_tags') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
