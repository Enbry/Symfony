{% extends "BlogBundle::layout.html.twig" %}

{% block title %}
  <h2>{{ category.name }}</h2>
{% endblock %}

{% block blog_body %}




  {% if not categories.advert.empty %}
  <p>
    Cette annonce est parue dans les catégories suivantes :
    {% for category in advert.categories %}
      {{ category.name }}{% if not loop.last %}, {% endif %}
    {% endfor %}

  </p>
{% endif %}

{% if not advert.tags.empty %}
<p>
  Tag de l'annonce :
  {% for tag in advert.tags %}
    {{ tag.name }}{% if not loop.last %}, {% endif %}
  {% endfor %}

</p>
{% endif %}



  <div class="well">
    {{ advert.content }}

  </div>

  <p>
    <a href="{{ path('blog_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('blog_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('blog_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>

{% endblock %}
