{% extends "BlogBundle::layout.html.twig" %}

{% block title %}
  Modifier une annonce - {{ parent() }}
{% endblock %}

{% block blog_body %}
{% if app.user %}
  <h2>Modifier une annonce</h2>

  {{ include("BlogBundle:Advert:form.html.twig") }}

  

  <p>
    <a href="{{ path('blog_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
  </p>
  {% else %}
  <p>Vous n'avez pas les droits nécessaires</p>
  <p>
    <a href="{{ path('blog_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
  </p>
  {% endif %}
{% endblock %}
