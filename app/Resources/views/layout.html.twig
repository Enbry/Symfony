<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Blog{% endblock %}</title>
  {% stylesheets 'bundles/blog/css/materialize.css' filter='cssrewrite' %}
              <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}

</head>

<body>

  <nav>
  <div class="nav-wrapper">
    <a href="#!" class="brand-logo">BLOG</a>
    <ul class="right hide-on-med-and-down">
      <li><a href="{{ path('blog_home') }}">Accueil</a></li>
      <li><a href="{{ path('blog_articles') }}">Articles</a></li>
      <li><a href="{{ path('blog_categories') }}">Catégories</a></li>
      {% if app.user %}
      <li><a href="{{ path('logout') }}">DÉCONNEXION</a></li>
      {% else %}
      <li><a href="{{ path('login') }}">CONNEXION</a></li>
      {% endif %}

    </ul>

  </div>
</nav>
<div class="row">
  {% if app.user %}
    <div class="col s3">
      <div class="divider"></div>
      <div class="section">
        <h5><a href="{{ path('blog_articles') }}">ANNONCES</a></h5>
      </div>
    <div class="divider"></div>
    <div class="section">
      <h5><a href="{{ path('blog_categories') }}">CATÉGORIES</a></h5>
    </div>
    <div class="divider"></div>
    <div class="section">
      <h5><a href="{{ path('blog_tags') }}">TAGS</a></h5>
    </div>
    </div>
  {% endif %}

    <div class="col s9">

        {% block body %}
        {% endblock %}
    </div>

</div>


    <footer class="page-footer">
      <div class="container footer-copyright">

            Noémie Brocheray © {{ 'now'|date('Y') }}


          </div>

    </footer>




</body>
</html>
